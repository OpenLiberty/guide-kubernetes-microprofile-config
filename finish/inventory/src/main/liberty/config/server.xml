<server description="Sample Liberty server">

  <featureManager>
    <feature>restfulWS-3.0</feature>
    <feature>jsonb-2.0</feature>
    <feature>cdi-3.0</feature>
    <feature>mpConfig-3.0</feature>
    <feature>jsonp-2.0</feature>
    <feature>mpHealth-4.0</feature>
  </featureManager>

  <variable name="default.http.port" defaultValue="9080"/>
  <variable name="default.https.port" defaultValue="9443"/>
  <!-- tag::username[] -->
  <variable name="sys.app.username" defaultValue="${sys_app_credentials/username}"/>
  <!-- end::username[] -->
  <!-- tag::password[] -->
  <variable name="sys.app.password" defaultValue="${sys_app_credentials/password}"/>
  <!-- end::password[] -->
  <!-- tag::context.root[] -->
  <variable name="context.root" defaultValue="${sys_app_root/contextRoot}"/>
  <!-- end::context.root[] -->

  <httpEndpoint host="*" httpPort="${default.http.port}" 
    httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>

  <webApplication location="guide-kubernetes-microprofile-config-inventory.war" contextRoot="/"/>

</server>
